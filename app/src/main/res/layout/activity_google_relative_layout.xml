<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="76dp"
        android:layout_alignBottom="@+id/txtsign"
        android:src="@drawable/google_logo" />
  <TextView
      android:id="@+id/txtsign"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sign in"
      android:textSize="35sp"
      android:textColor="#1F1F1E"
       android:layout_alignParentTop="true"
android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
 android:layout_marginLeft="140dp"
      android:layout_alignBottom="@+id/txtgooacc"
      android:layout_marginTop="210dp"
android:layout_marginRight="70dp"
      />
    <TextView
        android:id="@+id/txtgooacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/with_your_google_account"
        android:textSize="25sp"
        android:textColor="#1F1F1E"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="265dp"
        />
    <EditText
        android:id="@+id/etuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:hint="@string/username_or_email"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentTop="@+id/txtgooacc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/txtforgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot email?"
        android:textColor="#45b6fe"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="@+id/etuser"
       android:layout_alignParentBottom="@+id/txtcrt"
        />

  <TextView
      android:id="@+id/txtcrt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="10dp"
      android:layout_marginBottom="15dp"
      android:textSize="20sp"
      android:padding="20dp"
      android:text="Create Account"
      android:textColor="#3388ff"
      android:textStyle="bold" />

  <Button
    android:id="@+id/btnNext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="15dp"
    android:backgroundTint="#3388ff"
    android:padding="10dp"
    android:text="Next"
    android:textSize="20sp"
    android:textStyle="bold" />

</RelativeLayout>